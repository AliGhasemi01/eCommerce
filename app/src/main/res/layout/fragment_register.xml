<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/firstname_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/black_out_line"
            android:ems="10"
            android:maxLength="15"
            android:fontFamily="@font/montserrat_regular"
            android:hint="first name"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp" />

        <EditText
            android:id="@+id/lastname_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_out_line"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:hint="last name"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp" />

        <EditText
            android:id="@+id/username_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:maxLength="20"
            android:background="@drawable/black_out_line"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:hint="username"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp" />

        <EditText
            android:id="@+id/email_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_out_line"
            android:ems="10"
            android:maxLength="30"
            android:fontFamily="@font/montserrat_regular"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp" />


        <EditText
            android:id="@+id/phonenumber_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:maxLength="15"
            android:background="@drawable/black_out_line"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:hint="phone number"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp" />

        <EditText
            android:id="@+id/password_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_out_line"
            android:ems="10"
            android:maxLength="16"
            android:fontFamily="@font/montserrat_regular"
            android:hint="password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp" />

        <EditText
            android:id="@+id/password_confirmation_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_out_line"
            android:maxLength="16"
            android:ems="10"
            android:fontFamily="@font/montserrat_regular"
            android:hint="confirm password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"
            android:paddingRight="15dp"
            android:paddingBottom="7dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Im a seller" />

        <android.widget.Button
            android:id="@+id/signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/montserrat_bold"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Sign Up" />


    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bridge.SetInterestsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="What are you looking for?"
            android:textSize="28sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7"
            android:rowCount="4"
            android:columnCount="2">


            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_electronics">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:padding="25dp"
                    android:text="@string/electronics"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_regular"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/electronics" />

                <CheckBox
                    android:id="@+id/electronics_checkbox"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:button="@drawable/custom_round_checkbox"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_fashion">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:padding="25dp"
                    android:text="@string/fashion"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_regular"/>

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/fashion" />
                <CheckBox
                    android:id="@+id/fashion_checkbox"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:button="@drawable/custom_round_checkbox"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_sports">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:padding="25dp"
                    android:text="@string/sports"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_regular"/>


                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/sports" />

                <CheckBox
                    android:id="@+id/sports_checkbox"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:button="@drawable/custom_round_checkbox"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_home">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:padding="25dp"
                    android:text="@string/home"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_regular"/>


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/home" />

                <CheckBox
                    android:id="@+id/home_checkbox"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:button="@drawable/custom_round_checkbox"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_motors">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:padding="25dp"
                    android:text="@string/motors"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_regular"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/motors" />

                <CheckBox
                    android:id="@+id/motors_checkbox"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:button="@drawable/custom_round_checkbox"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_realstate">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:padding="25dp"
                    android:text="@string/real_state"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_regular"/>


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/real_state" />

                <CheckBox
                    android:id="@+id/realstate_checkbox"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:button="@drawable/custom_round_checkbox"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_entertainment">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:padding="20dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/entertainment"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_regular"/>


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/entertainment" />

                <CheckBox
                    android:id="@+id/entertainment_checkbox"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:button="@drawable/custom_round_checkbox"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>


        </GridLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/set_interests_next_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="40dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/skip"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/set_interests_previous_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/previous"
                android:textSize="30sp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
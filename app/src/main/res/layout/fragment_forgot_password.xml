<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3D1CB"
    tools:context=".fragment_forgot_password">


    <EditText
        android:id="@+id/username_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_out_line"
        android:ems="10"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Username"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:paddingRight="15dp"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.267" />

    <EditText
        android:id="@+id/password_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/montserrat_regular"
        android:hint="New password"
        android:background="@drawable/blue_out_line"
        android:paddingTop="7dp"
        android:paddingLeft="15dp"
        android:paddingBottom="7dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_forgotpassword" />

    <EditText
        android:id="@+id/confirm_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Confirm password"
        android:fontFamily="@font/montserrat_regular"
        android:background="@drawable/blue_out_line"
        android:paddingTop="7dp"
        android:paddingLeft="15dp"
        android:paddingBottom="7dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_forgotpassword" />

    <Button
        android:id="@+id/confirm_button_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Confirm"
        android:background="@drawable/bg_buttons1"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_forgotpassword"
        app:layout_constraintVertical_bias="0.186" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgotpassword_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_back_button"
        android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
        android:fontFamily="@font/montserrat_semibold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Back"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/username_forgotpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
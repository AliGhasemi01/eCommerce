<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bridge.SetProfilePicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set a profile picture"
            android:textSize="30sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:padding="0dp"
                android:src="@drawable/ic_baseline_account_circle_24" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/set_profile_camera_btn"
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:text="Take photo"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@drawable/bg_buttons3"
                android:padding="15dp"
                android:layout_below="@id/profile_image"
                android:layout_centerHorizontal="true" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/set_profile_gallery_btn"
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:text="From gallery"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semibold"
                android:background="@drawable/bg_buttons2"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/set_profile_camera_btn"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/set_profile_skip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textSize="23sp"
                android:fontFamily="@font/montserrat_regular"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"/>
        </RelativeLayout>


    </LinearLayout>


</ScrollView>
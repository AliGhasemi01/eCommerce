<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/appCompatImageView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="20dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/buttons4"
                android:elevation="5dp"
                android:padding="60dp"
                android:src="@drawable/no_image" />

            <android.widget.Button
                android:id="@+id/takephoto_btn"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_margin="40dp"
                android:background="@drawable/buttons3"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Take photo"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"/>

            <android.widget.Button
                android:id="@+id/fromgallery_btn"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_margin="40dp"
                android:background="@drawable/buttons2"
                android:fontFamily="@font/montserrat_semibold"
                android:text="From gallery"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>


        <EditText
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Product name" />

        <EditText
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Price" />

        <EditText
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Desciption (optional)" />


        <TextView
            android:id="@+id/add_category_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Select a category"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/parent_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/add_subcategory_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Select a subcategory"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/child_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

    </LinearLayout>

</ScrollView>
